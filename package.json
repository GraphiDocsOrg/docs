{
  "name": "@graphidocs/docs",
  "version": "1.0.2",
  "description": "Static page generator for documenting GraphQL Schema",
  "main": "./bin/graphidocs",
  "types": "./bin/graphidocs.d.ts",
  "bin": {
    "graphidocs": "./bin/graphidocs.js"
  },
  "scripts": {
    "beforedeploy": "yarn readme && yarn beforedeploy:copy-assets",
    "beforedeploy:copy-assets": "node -r ts-node/register scripts/before-deploy.ts",
    "compile": "tsc",
    "compile:once": "tsc --noEmit",
    "compile:watch": "tsc --watch --noEmit",
    "declaration": "tsc -d",
    "example:github": "node -r ts-node/register ./bin/graphidocs.ts -c examples/github.json -f -v",
    "example:pokemon": "node -r ts-node/register ./bin/graphidocs.ts -c examples/pokemon.json -f -v",
    "example:scaphold": "node -r ts-node/register ./bin/graphidocs.ts -c examples/scaphold.json -f -v",
    "example:shopify": "node -r ts-node/register ./bin/graphidocs.ts -c examples/shopify.json -f -v",
    "example:starwars": "node -r ts-node/register ./bin/graphidocs.ts -c examples/starWars.json -f -v",
    "example:starwars-js": "node -r ts-node/register ./bin/graphidocs.ts -c examples/starWars-js.json -f -v",
    "git:clean": "git clean -dfX",
    "lint": "tslint --project .",
    "readme": "node -r ts-node/register src/README.ts",
    "sass": "node-sass --output-style compressed src/template/slds/styles/graphidocs.scss > src/template/slds/styles/graphidocs.css",
    "test": "jest --coverage",
    "test:coveralls": "cat ./coverage/lcov.info | coveralls",
    "test:nocov": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GraphiDocsOrg/docs.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "graphql",
    "documentation"
  ],
  "author": "Fede Ramirez <i@2fd.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GraphiDocsOrg/docs/issues"
  },
  "homepage": "https://github.com/GraphiDocsOrg/docs#readme",
  "dependencies": {
    "@2fd/command": "1.1.2",
    "express": "4.16.4",
    "express-graphql": "0.7.1",
    "fs-extra": "7.0.1",
    "glob": "7.1.3",
    "graphql": "14.1.1",
    "handlebars": "4.0.12",
    "marked": "0.6.0",
    "mustache": "3.0.1",
    "request": "2.88.0",
    "slug": "0.9.3",
    "striptags": "3.1.1",
    "word-wrap": "1.2.3"
  },
  "devDependencies": {
    "@salesforce-ux/design-system": "2.8.1",
    "@types/chai": "4.1.7",
    "@types/express": "4.16.1",
    "@types/express-graphql": "0.6.2",
    "@types/fs-extra": "5.0.4",
    "@types/glob": "7.1.1",
    "@types/globby": "8.0.0",
    "@types/graphql": "14.0.5",
    "@types/handlebars": "4.0.40",
    "@types/jest": "23.3.13",
    "@types/marked": "0.6.0",
    "@types/mkdirp": "0.5.2",
    "@types/mocha": "5.2.5",
    "@types/mustache": "0.8.32",
    "@types/node": "10.12.18",
    "@types/request": "2.48.1",
    "@types/slug": "0.9.0",
    "coveralls": "3.0.2",
    "globby": "9.0.0",
    "jest": "23.6.0",
    "mkdirp": "0.5.1",
    "node-sass": "4.11.0",
    "ts-jest": "23.10.5",
    "ts-node": "8.0.1",
    "tslint": "5.12.1",
    "tslint-config-airbnb": "5.11.1",
    "tslint-config-prettier": "1.17.0",
    "typescript": "3.2.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!<rootDir>/node_modules/",
      "!src/**/__*__/*.ts",
      "!src/types/*.d.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "src"
    ],
    "testURL": "http://localhost",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
  }
}
