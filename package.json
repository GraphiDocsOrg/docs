{
  "name": "@graphidocs/docs",
  "version": "2.4.0",
  "description": "Static page generator for documenting GraphQL Schema",
  "main": "bin/graphidocs",
  "bin": {
    "graphidocs": "./bin/graphidocs.js"
  },
  "scripts": {
    "sass": "node-sass --output-style compressed template/slds/styles/graphidocs.scss > template/slds/styles/graphidocs.css",
    "compile": "tsc",
    "compile:once": "tsc --noEmit",
    "compile:watch": "tsc --watch --noEmit",
    "declaration": "tsc -d",
    "readme": "node -r ts-node/register src/README.ts",
    "doc.github": "node -r ts-node/register bin/graphidocs.js -c example.github.json -f -v",
    "doc.pokemon": "node -r ts-node/register bin/graphidocs.js -c example.pokemon.json -f -v",
    "doc.shopify": "node -r ts-node/register bin/graphidocs.js -c example.shopify.json -f -v",
    "doc.scaphold": "node -r ts-node/register bin/graphidocs.js -c example.scaphold.json -f -v",
    "doc.starwars": "node -r ts-node/register bin/graphidocs.js -c example.starWars.json -f -v",
    "doc.starwars-js": "node -r ts-node/register bin/graphidocs.js -c example.starWars-js.json -f -v",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GraphiDocsOrg/docs.git"
  },
  "keywords": [
    "graphql",
    "documentation"
  ],
  "author": "Fede Ramirez <i@2fd.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GraphiDocsOrg/docs/issues"
  },
  "homepage": "https://github.com/GraphiDocsOrg/docs#readme",
  "dependencies": {
    "@2fd/command": "1.1.2",
    "bluebird": "3.5.3",
    "fs-extra": "7.0.1",
    "glob": "7.1.3",
    "graphql": "0.13.2",
    "marked": "0.6.0",
    "mustache": "3.0.1",
    "request": "2.88.0",
    "slug": "0.9.3",
    "striptags": "3.1.1",
    "word-wrap": "1.2.3"
  },
  "devDependencies": {
    "@salesforce-ux/design-system": "2.2.1",
    "@types/bluebird": "3.5.25",
    "@types/chai": "4.1.7",
    "@types/fs-extra": "5.0.4",
    "@types/glob": "7.1.1",
    "@types/graphql": "14.0.5",
    "@types/handlebars": "4.0.40",
    "@types/jest": "23.3.12",
    "@types/marked": "0.6.0",
    "@types/mocha": "5.2.5",
    "@types/mustache": "0.8.32",
    "@types/node": "10.12.18",
    "@types/request": "2.48.1",
    "@types/slug": "0.9.0",
    "handlebars": "4.0.12",
    "jest": "23.6.0",
    "node-sass": "3.13.1",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "typescript": "3.2.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!<rootDir>/node_modules/",
      "!src/**/__*__/*.ts",
      "!src/types/*.d.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "src"
    ],
    "testURL": "http://localhost",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "verbose": true
  },
  "graphidocs": {
    "ga": "UA-54154153-2",
    "graphiql": "https://developer.github.com/early-access/graphql/explorer/",
    "logo": "<a href=\"https://developer.github.com/early-access/graphql\" target=\"_blank\" style=\"display:block;padding:1rem 3rem\"><img src=\"https://assets-cdn.github.com/images/modules/logos_page/GitHub-Logo.png\" /></a>",
    "schemaFile": "./test/github.json",
    "output": "./gh-pages/github",
    "baseUrl": "./"
  }
}
